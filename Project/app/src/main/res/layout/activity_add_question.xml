<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".AddQuestionActivity">

    <ImageView
        android:id="@+id/questionImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="348dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/noimageavaliable" />


    <Button
        android:id="@+id/setTimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_marginStart="10dp"
        android:text="Set timer"/>

    <Button
        android:id="@+id/importQuestionImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="10dp"
        android:text="Add Image" />

    <TextView
        android:layout_width="237dp"
        android:layout_height="33dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="230dp"
        android:text="Enter question:"
        android:textSize="20dp" />

    <EditText
        android:layout_width="329dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/questionImage"
        android:layout_marginStart="23dp"
        android:layout_marginTop="262dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="183dp"
        android:hint="Type the question here" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:rowCount="4"
        android:columnCount="2"
        android:padding="10dp"
        android:id="@+id/answersGrid"
        >

        <Button
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="A"
            />
        <Button
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="B"
            />
        <Button
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="C"/>
        <Button
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="D"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="right"
            android:layout_marginLeft="62dp"
            android:padding="10dp"
            android:text="Add Question"
            android:onClick="addQuestion"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="right"
            android:layout_marginLeft="80dp"
            android:padding="10dp"
            android:text="Done"/>
            <!--android:onClick=""-->

    </GridLayout>








</RelativeLayout>
</ScrollView>